<Window x:Class="TryMVVM.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TryMVVM.Views"
        xmlns:vm="clr-namespace:TryMVVM.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <WrapPanel ItemWidth="100">
        <TextBox Text="{Binding Count, Mode=OneWay}" IsReadOnly="True" Margin="10,10,10,10"/>
        <Button Content="+" Command="{Binding CountUpCommand, Mode=OneTime}"  Margin="10,10,10,10" />
        <Button Content="-" Command="{Binding CountDownCommand, Mode=OneTime}"  Margin="10,10,10,10" />
    </WrapPanel>
</Window>
